<h1>New posts</h1>

<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <div id="errors">
            <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
                <ul>
                <% @post.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
                </ul>
        </div>
    <% end %>
<% end %>
<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>

<p>
<%= f.label :body %>
<%= f.text_area :body %>
</p>

<p>
<%= f.submit %>
</p>
<% end %>