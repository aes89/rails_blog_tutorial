<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.png" %>
        <% end %>
      </div> 
      <ul>
      <li>Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li>About</li>
      </ul>

      <ul>
        <li>Social</li>
        <li>Links</li>
        <li>links</li>
        <li>links</li>
        <li>links</li>
        </ul>

       <p class="sign_in">
       Admin Sign In 
       </p>
        </div>

      <div id="main_content">
        <div id="header">
          <div class="buttons">
            <button class="button">
              <%= link_to "New Post", new_post_path%>
            </button>
            <button class="button">
              Log Out
            </button>
          </div>
          
        </div>
        <% flash.each do |name, message| %>
          <%= content_tag(:div, message, class: "alert") %>
        <% end %>

        <%= yield %>
      </div>
    
  </body>
</html>
